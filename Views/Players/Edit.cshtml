@model LeagueOrganizer.Models.Player

@{
    ViewData["Title"] = "Player - Edit";
}
<h2>Edit</h2>
<hr />
<h4>Edit this Player: @Html.DisplayFor(model => model.FName) @Html.DisplayFor(model => model.LName)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.PlayerId)

    @Html.LabelFor(model => model.FName)
    @Html.EditorFor(model => model.FName)

    @Html.LabelFor(model => model.LName)
    @Html.EditorFor(model => model.LName)

    @Html.LabelFor(model => model.TeamId)
    @Html.DropDownList("TeamId")


    <input type="submit" value="Save" class="btn btn-default" />
}
@Html.ActionLink("Back to List", "Index")